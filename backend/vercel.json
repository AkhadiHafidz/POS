{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/api/index.js", // Path ke serverless function Anda
      "use": "@vercel/node@3.0.12",   // Gunakan versi yang stabil
      "config": {
        "maxLambdaSize": "10mb",
        "includeFiles": [
          "backend/src/**",          // Termasuk semua di src (controllers, middleware, routes, dll.)
          "backend/node_modules/**",
          "backend/.env"
        ]
      }
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // Tangkap semua yang diawali /api/
      "dest": "/backend/src/api/index.js" // Arahkan ke serverless function Anda
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "installCommand": "npm install --prefix backend && npm install --prefix frontend",
  "buildCommand": "npm run build --prefix frontend"
}
